<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/img_profile_pic"
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/txt1"
        android:text="Album ID"
        android:textSize="20sp"
        android:textColor="@color/Blue"
        android:layout_toEndOf="@id/img_profile_pic"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_album_id"
        android:text="1"
        android:textSize="20sp"
        android:textColor="@color/Red"
        android:layout_toEndOf="@id/txt1"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt2"
        android:text="TITLE"
        android:textSize="20sp"
        android:textColor="@color/Blue"
        android:layout_below="@id/txt_album_id"
        android:layout_toEndOf="@id/img_profile_pic"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_title"
        android:text="reprehenderit est deserunt velit ipsam"
        android:textSize="20sp"
        android:textColor="@color/Red"
        android:layout_below="@id/txt2"
        android:layout_toEndOf="@id/img_profile_pic"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</RelativeLayout>